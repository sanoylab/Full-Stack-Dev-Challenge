@model News.Data.Models.Category

@{ Layout = null; }
<div class="container">
    <form asp-action="Form" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">


        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" >
          
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Thumbnail"></label>
            <input asp-for="Thumbnail" class="form-control">
            <small id="emailHelp" class="form-text text-muted">Please add URL for the category thumbnail</small>
            <span asp-validation-for="Thumbnail" class="text-danger"></span>
        </div>



      




        <div class="form-group row">
            <div class="col-12">
                <input type="submit" value="Submit" class="btn btn-primary btn-block" />


            </div>

        </div>


    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" /> }