@model News.Data.Models.Post
@{ 
    ViewData["Title"] = @Html.DisplayFor(model => model.Title);
}


<main>
    <div class="position-relative overflow-hidden p-3 p-md-5  text-center bg-light"
         style="background-image: url('@Html.DisplayFor(model => model.HeroImage)');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        background-size:cover;
        min-height: 500px;">
        <div class="col-md-5 p-lg-5 mx-auto my-5">


        </div>

    </div>




    <div class="container">

        <div class="row">
            <div class="col-md-8">
                <div class="row py-5">
                    <h1>@Html.DisplayFor(model => model.Title)</h1>
                </div>

                <article class="blog-post">

                    <p class="blog-post-meta">@Html.DisplayFor(model => model.CreatedDate) by <a href="#"><img src="@Html.DisplayFor(model => model.Publisher)" /></a></p>

                    <p style="white-space: pre-line"> @Html.DisplayFor(model => model.Body)</p>
                </article><!-- /.blog-post -->

            </div>

            <div class="col-md-4">

            </div>

        </div><!-- /.row -->
    </div>



</main>