@model Online.Classified.App.Models.Classified

@{
    ViewBag.Title = "PostAd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
       
            @Html.ActionLink(" << Back to My Ads", "MyAds",null,new {@class="btn btn-warning" })


    </div>
    <div class="row">
        <h2 class="title text-center">Post Ad</h2>
    </div>
    <div class="row">
        <div class="col-md-8">
