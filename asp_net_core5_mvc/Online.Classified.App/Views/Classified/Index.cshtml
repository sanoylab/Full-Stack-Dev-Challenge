@model IEnumerable<Online.Classified.Data.Models.Classified>

<div class="container">
    <div class="col-12"> <h2 class="text-center"></h2></div>
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-3">

                <div class="card border-0 m-2 p-3" style="width: 18rem;">
                    <img class="card-img-top" src="@item.PictureUrl" alt="Card image cap">
                    <div class="card-body">
                        <p class="text-center text-danger"><strong><label>@item.Price</label></strong></p>
                        <p class="card-text text-center"> <label asp-for="@item.Title">@item.Title</label></p>
                    </div>
                </div>
            </div>
        }


    </div>
</div>